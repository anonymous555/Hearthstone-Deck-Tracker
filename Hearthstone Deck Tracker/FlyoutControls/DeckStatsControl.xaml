                    <ComboBox Name="ComboboxGameMode" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxGameMode_SelectionChanged" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Label Content="Timeframe:" />
                    <ComboBox x:Name="ComboboxTime" SelectedIndex="6" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxTime_SelectionChanged">
                        <system:String>Today</system:String>
                        <system:String>Last Week</system:String>
                        <system:String>Last Month</system:String>
                        <system:String>Last Year</system:String>
                        <system:String>All Time</system:String>
                    </ComboBox>
                </StackPanel>
                <TextBox Name="TextboxNoteFilter" controls:TextboxHelper.Watermark="Note filter" Margin="3"
                         TextChanged="TextBox_TextChanged" Width="120" />
                <StackPanel Name="StackPanelUnassignedFilter" Orientation="Horizontal" Margin="3" Visibility="Collapsed">
                    <Label Content="Games:" />
                    <ComboBox x:Name="ComboboxUnassigned" SelectedIndex="6" VerticalAlignment="Bottom" Width="90"
                              SelectionChanged="ComboboxUnassigned_SelectionChanged" ToolTip="Show games with an/no associated deck.">
                        <system:String>With deck</system:String>
                        <system:String>Without deck</system:String>
                        <system:String>All</system:String>
                    </ComboBox>
                </StackPanel>

            </WrapPanel>
